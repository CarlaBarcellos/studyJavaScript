{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [ 1, 2 ],
        "quotes": [ 1,"single" ],
        "semi": [ "error","always" ]
    }
}